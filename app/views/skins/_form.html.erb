<%= form_with model: @skin, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Enter the name of the skin" %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Describe the skin" %>
  </div>

  <div>
    <%= f.label :starting_price %>
    <%= f.number_field :starting_price, placeholder: "Set the starting price" %>
  </div>

  <div>
    <%= f.label :image_url, "Image URL" %>
    <%= f.text_field :image_url, placeholder: "Enter the URL of the image" %>
  </div>

  <div>
    <%= f.submit "Save Skin" %>
  </div>
<% end %>
